{
  "settings": {
    "analysis": {
      "filter": {
        "russian_stop": {
          "type":       "stop",
          "stopwords":  "_russian_" 
        },
        "russian_stemmer": {
          "type":       "stemmer",
          "language":   "russian"
        },

        "english_stop": {
          "type":       "stop",
          "stopwords":  "_english_"
        },
        "english_stemmer": {
          "type":       "stemmer",
          "language":   "english"
        },
        "english_possessive_stemmer": {
          "type":       "stemmer",
          "language":   "possessive_english"
        },

        "latvian_stop": {
          "type":       "stop",
          "stopwords":  "_latvian_"
        },
        "latvian_stemmer": {
          "type":       "stemmer",
          "language":   "latvian"
        },
        "ngram_filter": {
            "type":     "edge_ngram",
            "min_gram": 3,
            "max_gram": 15
        }
      },
      "analyzer": {
        "russian": {
          "tokenizer":  "standard",
          "filter": [
            "lowercase",
            "russian_stop",
            "russian_stemmer"
          ]
        },

        "english": {
          "tokenizer":  "standard",
          "filter": [
            "icu_folding",
            "english_possessive_stemmer",
            "lowercase",
            "english_stop",
            "english_stemmer"
          ]
        },

        "latvian": {
          "tokenizer":  "standard",
          "filter": [
            "lowercase",
            "latvian_stop",
            "latvian_stemmer"
          ]
        },

        "ngrams": {
            "type":      "custom",
            "tokenizer": "standard",
            "filter":   [
                "icu_folding",
                "lowercase",
                "ngram_filter"
            ]
        }
      }
    },
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0
    }
  }
}